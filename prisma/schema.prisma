generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Documents{
  userId           String  @id @default(uuid())
  title            String
  isArchived       Boolean @default(false)
  parentDocumentId String? @default("")
  content          Json?
  coverImage       String?
  icon             String?
  isPublished      Boolean @default(false)

  parentDocument Documents? @relation("Parent", fields: [parentDocumentId], references: [userId])

  children       Documents[] @relation("Parent")

  @@index([userId])
  @@index([userId, parentDocumentId])
}